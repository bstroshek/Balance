{% comment %}
  *** Header ***
  See https://shopify.dev/docs/themes/architecture/layouts
{% endcomment %}


<div class="my_section my_header p-10">
  <!-- Header section -->

  <div class="flex space-x-4 text-gray-700">
    <!-- Home Link -->
    <a href="{{ routes.root_url }}" class="flex items-center space-x-2 hover:text-blue-600">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
        <path fill-rule="evenodd" d="M10.5 3.134a2.25 2.25 0 013 0l7.5 6.75a2.25 2.25 0 01.75 1.682v7.934a2.25 2.25 0 01-2.25 2.25h-3a.75.75 0 01-.75-.75V15a2.25 2.25 0 00-2.25-2.25h-3A2.25 2.25 0 009 15v6a.75.75 0 01-.75.75h-3a2.25 2.25 0 01-2.25-2.25v-7.934a2.25 2.25 0 01.75-1.682l7.5-6.75z" clip-rule="evenodd" />
      </svg>
      <span>Home</span>
    </a>

  </div>

</div>

<script>
  // See https://shopify.dev/docs/themes/navigation-search/search
  const input = document.querySelector('#my_search');
  input.addEventListener('keypress', (e) => {
    if (event.key === 'Enter') {
      const path = `{{ request.locale.root_url }}/`.replace(/\/\//, '/');
      window.location.href = `${path}search?q=${input.value}&type=product&options[unavailable_products]=hide&options[prefix]=last`;
    }
  });
  input.value = new URLSearchParams(window.location.search).get('q');
</script>

{% schema %}
{
  "name": "t:sections.header.name",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Header Title",
      "default": "THIS IS HEADER"
    }
  ],
  "max_blocks": 8,
  "blocks": [
    {
      "name": "My Image",
      "type": "my_type_1",
      "settings": [
        {
          "type": "image_picker",
          "id": "my_image",
          "label": "My Image"
        }
      ]
    },
    {
      "name": "My Color",
      "type": "my_type_2",
      "settings": [
        {
          "type": "color",
          "id": "my_color",
          "label": "My Color"
        }
      ]
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  }
}
{% endschema %}
